.modal-form
  width 100%

  &__phone
    width 75%
    padding 14px 10px
    margin 10px 0
    outline none
    border-radius: 2px
    color #65b2e4
    background-color #eff7fc
    border 1px solid #65b2e4
    &--features
      max-width 280px
      width 100%
      display block
      margin 20px auto 10px auto
      @media (max-width: 410px)
        width 84%

  &__desc
    color #65b2e4
    margin 14px auto 0 auto
    width 90%

  &__link
    color #65b2e4
    &:hover
      text-decoration none